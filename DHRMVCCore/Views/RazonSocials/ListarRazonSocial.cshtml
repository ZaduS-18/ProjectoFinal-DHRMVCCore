@model IEnumerable<DHRMVCCore.Models.RazonSocial>

@{
    ViewData["Title"] = "ListarRazonSocial";
}


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | DataTables</title>

</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="RedirectToListarActums" class="nav-link">Actas</a>
                </li>

            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">


                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown" style="position: relative; left: -20px;">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-danger navbar-badge">3</span>
                    </a>
                    <div id="contenedor-notificaciones" class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!-- Las notificaciones se cargarán aquí -->
                    </div>
                </li>


                <li class="nav-item">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var primerNombre = User.Claims.FirstOrDefault(c => c.Type == "PrimerNombre")?.Value;
                        var primerApellido = User.Claims.FirstOrDefault(c => c.Type == "PrimerApellido")?.Value;
                        var rolId = User.Claims.FirstOrDefault(c => c.Type == "RolIdRol")?.Value;
                        string nombreRol = "";

                        switch (rolId)
                        {
                            case "0":
                                nombreRol = "Sin Rol";
                                break;
                            case "1":
                                nombreRol = "Jefe de Terreno";
                                break;
                            case "2":
                                nombreRol = "Oficina Técnica";
                                break;
                            case "3":
                                nombreRol = "Experto en Prevención";
                                break;
                            case "4":
                                nombreRol = "Encargado de Calidad";
                                break;
                            case "5":
                                nombreRol = "Administrativo de Obra";
                                break;
                            case "6":
                                nombreRol = "Especialidades BIM";
                                break;
                            case "7":
                                nombreRol = "Jefe de Bodega";
                                break;
                            case "8":
                                nombreRol = "OBS Obras";
                                break;
                            default:
                                nombreRol = "Rol Desconocido";
                                break;
                        }

                        <span class="font-weight-bold">
                            @($"{primerNombre} {primerApellido}")
                        </span>

                        <br>
                        <span class="text-muted" style="font-size: smaller;">
                            Rol: @nombreRol
                        </span>
                    }
                    else
                    {
                        <span>Usuario no autenticado</span>
                    }
                </li>




            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="RedirectToListarActums" class="brand-link">
                <img src="../../dist/img/logo_bravoizquierdo.jpg" alt="DHR" class="brand-image elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">DHR</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <div class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="RedirectToListarActums" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Actas

                                </p>
                            </a>
                        </li>
                        @{
                            var isAdmin3 = Context.User.HasClaim(c => c.Type == "Admin" && c.Value == "True");
                            var isOficinaTecnica3 = Context.User.HasClaim(c => c.Type == "RolIdRol" && c.Value == "2"); // Asumiendo que "2" es el valor para Oficina Técnica
                        }

                        @if (isAdmin3 || isOficinaTecnica3)
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="RedirectToListarUsuarios" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Perfiles
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="RedirectToListarRazonSocial" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Razones Sociales
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="RedirectToListarObras" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Obras
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="RedirectToListarFechaCierre" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Calendario
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="RedirectToListarEspecialidad" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Especialidades
                                    </p>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Salir" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Cerrar Session
                                </p>
                            </a>
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Listar Razones Sociales</h1>
                        </div>

                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">DataTables</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">

                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Listado de Razones sociales
                                    </h3>
                                </div>
                                <p>
                                    <a asp-action="Create" class="btn btn-danger" style="width: 150px; height: 40px; margin-left: 20px;">Crer Razon Social</a>
                                </p>
                                <table id="example2" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.RutRs)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NombreRs)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RutRs)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombreRs)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.IdRazonSocial">Edit</a> |
                                                    <a asp-action="Details" asp-route-id="@item.IdRazonSocial">Details</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.IdRazonSocial">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#example2').DataTable({
                "responsive": true,
                "autoWidth": false,
                "buttons": [
                    {
                        extend: 'copy',
                        className: 'btn btn-primary'
                    },
                    {
                        extend: 'csv',
                        className: 'btn btn-primary'
                    },
                    {
                        extend: 'excel',
                        className: 'btn btn-primary'
                    },
                    {
                        extend: 'pdf',
                        className: 'btn btn-primary'
                    },
                    {
                        extend: 'print',
                        className: 'btn btn-primary'
                    },
                    {
                        extend: 'colvis',
                        className: 'btn btn-primary'
                    }
                ],
                "dom": "<'row'<'col-sm-12 col-md-6'B><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "paging": true
            });
        });
    </script>
</body>
</html>



