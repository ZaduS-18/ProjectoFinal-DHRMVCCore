                                <label asp-for="EstadoActa" class="control-label">ESTADO DEL ACTA</label>
                                <select asp-for="EstadoActa" asp-items="@((List<SelectListItem>)ViewData["EstadoActaOptions"])" class="form-control"></select>
                                <span asp-validation-for="EstadoActa" class="text-danger"></span>
